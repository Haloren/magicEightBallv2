<form action="/answerlists" method="POST">

    <input type="submit" value="Create List">
    <br>
    
    <input type="text" name="list_name" placeholder="Name of Answer List" required>
    <br>

    <% counter = 0%>
    <% while counter < 20 %>
        <%if counter < 1%>
            <br><input type="text" name="answers[]" placeholder="Add an Answer HERE" maxlength="25" required>
        <% else %>
            <br><input type="text" name="answers[]" placeholder="Add an Answer HERE" maxlength="25">
        <% end %>
        <% counter += 1%>
    <% end %>

    <br>
    <input type="submit" value="Create List">

</form>